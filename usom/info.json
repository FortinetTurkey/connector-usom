  "category": "investigation",
  "help_online": "",
  "configuration": {
    "fields": [
      {
        "title": "URL",
        "required": true,
        "editable": true,
        "visible": true,
        "type": "text",
        "description": "Usom XML URL",
        "name": "url",
        "tooltip": "Type USOM XML URL",
        "value": "https://www.usom.gov.tr/url-list.xml"
      },
      {
        "title": "Verify SSL",
        "required": false,
        "editable": true,
        "visible": true,
        "type": "checkbox",
        "value": "true",
        "name": "verify"
      },
      {
        "title": "Retention",
        "required": true,
        "editable": true,
        "visible": true,
        "type": "integer",
        "description": "Threat list expire limit",
        "name": "expire_hours",
        "tooltip": "Minimum 2 Hours",
        "value": "12",
         "validation":{
            "pattern":"\\d+",
            "patternError":"Must be valid number."
          }
      }
    ]
  },
  "operations": [
    {
      "operation": "lookup",
      "title": "Lookup URL",
      "description": "USOM lookup",
      "category": "investigation",
